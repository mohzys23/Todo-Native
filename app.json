{
  "expo": {
    "name": "Simple-Todo",
    "slug": "simple-todo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/todo.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.mohzys23.simpletodo"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "description": "A todo app to add todo and delete with keyboard close feature and flatlist scroll fixing",
    "githubUrl": "https://github.com/mohzys23/Todo-Native.git"
  }
}
